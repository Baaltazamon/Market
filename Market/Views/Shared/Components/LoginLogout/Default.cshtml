@if (User.Identity.IsAuthenticated)
{
    <span class="text-light">Здравствуйте, @User.Identity.Name</span>
    <form method="post" asp-controller="Account" asp-action="LogOut" asp-antiforgery="true">
        <input type="submit" value="Выход" class="btn btn-default"/>
    </form>
}
else
{
    <div class="btn-group pull-right">
        <a asp-action="Login" asp-controller="Account" class="btn btn-default">Вход</a>
        <a asp-action="Register" asp-controller="Account" class="btn btn-default">Регистрация</a>
    </div>
}
@{
    ViewData["Title"] = "Default";
}


