@model List<Market.ViewModels.BrandViewModel>
<div class="brands_products">
    <!--brands_products-->
    <h2>Brands</h2>
    <div class="brands-name">
        <ul class="nav nav-pills nav-stacked">
            @foreach (var item in Model)
            {
                <li><a asp-controller="Catalog" asp-action="Products" asp-route-brandId="@item.Id"> <span class="pull-right">(@item.Count)</span>@item.Name</a></li>
            }

            
        </ul>
    </div>
</div><!--/brands_products-->